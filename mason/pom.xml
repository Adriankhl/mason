		</dependency>

		<dependency>
			<groupId>com.github.hharrison</groupId>
			<artifactId>vecmath</artifactId>
			<version>1.6.2</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/java3d/vecmath.jar</systemPath>
		</dependency>


