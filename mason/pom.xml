			<artifactId>junit</artifactId>
			<version>4.13</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>com.github.hharrison</groupId>
			<artifactId>java3d-core</artifactId>
			<version>1.6.2</version>
			<scope>system</scope>
			<systemPath>${project.basedir}/java3d/j3dcore.jar</systemPath>
		</dependency>


		<!-- https://github.com/hharrison/java3d-core -->
